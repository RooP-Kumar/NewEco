<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontalRecyclerViewCardHeight"
        android:id="@+id/horizontal_slider_maincardview"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_margin="@dimen/space_12"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/generalSpace"
            >

            <ImageView
                android:id="@+id/horizontal_slider_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/outline_shopping_cart_24"
                />


            <TextView
                android:id="@+id/horizontal_slider_titletv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/demo_text"
                android:layout_marginStart="@dimen/generalSpace"
                app:layout_constraintLeft_toRightOf="@+id/horizontal_slider_imageview"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="18sp"
                android:textFontWeight="@integer/bold"
                />

            <TextView
                android:id="@+id/horizontal_slider_priceTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/horizontal_slider_imageview"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_slider_titletv"
                android:text="@string/demo_integer"
                android:textFontWeight="@integer/bold"
                android:layout_marginStart="@dimen/generalSpace"
                android:layout_marginTop="@dimen/space_6"
                android:textAlignment="textEnd"
                android:paddingEnd="@dimen/generalSpace"
                android:paddingStart="@dimen/generalSpace"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

